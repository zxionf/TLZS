<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">

	<RelativeLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center"
		android:background="#FFFFFFFF"
		android:onClick="onGoClick"
		android:id="@+id/kpRelativeLayout1">

		<View
			android:background="@drawable/hp"
			android:layout_width="200dp"
			android:layout_height="200dp"
			android:id="@+id/kpView1"/>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="200dp"
			android:layout_height="200dp"
			android:gravity="center">

			<View
				android:background="@drawable/ic_x"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:id="@+id/kpView2"
				android:alpha="0"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="200dp"
			android:layout_height="200dp"
			android:gravity="center">

			<View
				android:background="@drawable/ic_x_rgb"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:id="@+id/kpView3"
				android:alpha="0"/>

		</LinearLayout>

	</RelativeLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="滚屏中"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="，单击跳过"/>

	</LinearLayout>

	<View
		android:background="@drawable/libgdx"
		android:layout_width="90dp"
		android:layout_height="15dp"
		android:layout_alignParentBottom="false"
		android:layout_marginBottom="20dp"
		android:layout_alignBottom="@id/kpRelativeLayout1"/>

</RelativeLayout>

